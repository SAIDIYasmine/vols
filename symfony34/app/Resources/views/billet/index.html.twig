{% extends 'base.html.twig' %}
{% block body %}
        <section class="page-section portfolio" id="voyageurs">
            <br/>
            <div class="container">
                <div class="text-center">
                    <h2 class="page-section-heading text-secondary mb-0 d-inline-block">Gestion des billets</h2>
                </div>
                <section>
                    <br/>
                </section>
                <div class="container-xl">
                    <div class="table-responsive">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <button type="button" class="btn btn-success" onclick=" relocate_home()"><i class="material-icons">&#xE147;</i>Ajouter nouveau billet</button>
                                        <script>
                                            function relocate_home() {
                                                location.href = "./new";
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-striped table-hover">
                                <thead>
                                <tr>
                                    <th style="width:20%">Date</th>
                                    <th>Source</th>
                                    <th>Destination</th>
                                    <th>Prix</th>
                                    <th>Classe</th>
                                    <th>voyageur</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for billet in billets %}
                                    <tr>
                                        <td>{% if billet.date %}{{ billet.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>{{ billet.source }}</td>
                                        <td>{{ billet.destination }}</td>
                                        <td>{{ billet.prix }}</td>
                                        <td>{{ billet.classe }}</td>
                                        <td>{% if billet.voyageur != null %}
                                                <a href="{{ path('voyageur_show', { 'id': billet.voyageur.id }) }}">{{ billet.voyageur.nom }} {{ billet.voyageur.prenom }}</a>{% else %}<a href="{{ path('billet_affect', { 'id': billet.id }) }}">affecter Ã  un voyageur </a>{% endif %}</td>
                                        <td>
                                        <td>
                                            <a href="{{ path('billet_edit', { 'id': billet.id }) }}"> <i class="fa fa-edit" style="font-size:20px;color:#FFC733" title="details"></i></a>
                                            <a href="{{ path('billet_show', { 'id': billet.id }) }}"><i class="fa fa-info-circle" style="font-size:20px;color:#DF2216" title="Modifier"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
