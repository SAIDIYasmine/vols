{% extends 'base.html.twig' %}

{% block body %}
    <section class="page-section portfolio" id="voyageurs">
        <br/>
        <div class="container">
            <div class="text-center">
                <h2 class="page-section-heading text-secondary mb-0 d-inline-block">Gestion des voyageurs</h2>
            </div>
            <section>
                <br/>
            </section>
            <div class="container-xl">
                <div class="table-responsive">
                    <div class="table-wrapper">
                        <div class="table-title">
                            <div class="row">
                                <div class="col-sm-6">
                                    <button type="button" class="btn btn-success" onclick=" relocate_home()"><i class="material-icons">&#xE147;</i>Ajouter nouveau voyageur</button>
                                    <script>
                                        function relocate_home() {
                                            location.href = "./new";
                                        }
                                    </script>
                                </div>
                            </div>
                        </div>
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prenom</th>
                                <th>Nationalite</th>
                                <th>Numero de passpot</th>
                                <th>Date de naissance</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for voyageur in voyageurs %}
                                    <tr>
                                        <td>{{ voyageur.nom }}</td>
                                        <td>{{ voyageur.prenom }}</td>
                                        <td>{{ voyageur.nationalire }}</td>
                                        <td>{{ voyageur.numPasspot }}</td>
                                        <td>{% if voyageur.dateNaissance %}{{ voyageur.dateNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>
                                            <a href="{{ path('voyageur_show', { 'id': voyageur.id }) }}"><i class="fa fa-info-circle" style="font-size:20px;color:#DF2216" title="details"></i></a>
                                            <a href="{{ path('voyageur_edit', { 'id': voyageur.id }) }}"><i class="fa fa-edit" style="font-size:20px;color:#FFC733" title="Modifier"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
